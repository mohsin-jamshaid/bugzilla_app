<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, required:true ,autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :user_type %><br />
    <%= f.select(:user_type, User.user_types.keys.map {|user_type| [user_type.titleize,user_type]}, {}, class: "custom-select date-select") %>
  </div>
  
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image %><br />
    <%= f.file_field :avatar %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", id: "Signup", class: "btn btn-primary"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
