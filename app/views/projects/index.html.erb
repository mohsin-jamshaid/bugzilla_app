<div>
  <div><h1>Projects</h1></div>
  <% if current_user.manager? %>
    <div>
      <%= link_to "Create New Project",new_project_path %>
    </div><br>
  <% end %>
  <% if current_user.created_projects.any? || current_user.projects.any? %> 
    <div class = "table-responsive"> 
      <div>
        <table class= "table table-dark table-hover">
          <thead>
            <tr>
            <th>Title</th>
            </tr> 
            <tr></tr>
          </thead> 
            <tbody>
              <% policy_scope(@projects).each do |project| %>
                <tr>
                  <td><%= project.title %></td>
                  <td><%= link_to 'Show Project', project_path(project.id), class: "text-success white-link" %></td>
                  <% if current_user.manager? %>
                    <td><%= link_to 'Edit Project', edit_project_path(project.id), class: "text-warning white-link" %></td>
                    <td><%= link_to 'Delete Project', project_path(project.id), class: "text-info white-link", method: :delete, data: {confirm: "Are you sure?"} %></td>  
                    <% end %> 
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  <% end %>
</div>